{
  "name": "top-finance",
  "version": "1.0.0",
  "description": "Microserviço de Finanças - Desafio Técnico",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "migrate:latest": "ts-node -O '{\"module\":\"commonjs\"}' ./node_modules/.bin/knex migrate:latest",
    "migrate:rollback": "ts-node -O '{\"module\":\"commonjs\"}' ./node_modules/.bin/knex migrate:rollback",
    "migrate:status": "ts-node -O '{\"module\":\"commonjs\"}' ./node_modules/.bin/knex migrate:status",
    "seed:run": "ts-node -O '{\"module\":\"commonjs\"}' ./node_modules/.bin/knex seed:run",
    "db:reset": "ts-node -O '{\"module\":\"commonjs\"}' ./node_modules/.bin/knex migrate:rollback --all && ts-node -O '{\"module\":\"commonjs\"}' ./node_modules/.bin/knex migrate:latest && ts-node -O '{\"module\":\"commonjs\"}' ./node_modules/.bin/knex seed:run",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:integration": "jest --config ./jest-integration.config.js",
    "test:integration:cov": "jest --config ./jest-integration.config.js --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "_moduleAliases": {
    "@": "./dist",
    "@domain": "./dist/domain",
    "@application": "./dist/application",
    "@infrastructure": "./dist/infrastructure",
    "@presentation": "./dist/presentation"
  },
  "keywords": [
    "microservice",
    "nestjs",
    "finance",
    "ddd"
  ],
  "author": "Desenvolvedor (a)",
  "license": "MIT",
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.4.20",
    "@nestjs/platform-express": "^10.0.0",
    "@types/uuid": "^10.0.0",
    "dotenv": "^16.3.1",
    "knex": "^3.1.0",
    "module-alias": "^2.2.3",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "directories": {
    "test": "tests"
  },
  "type": "commonjs"
}
